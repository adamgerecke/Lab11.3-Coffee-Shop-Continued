        <option value="" selected="selected">Coffee Style</option>
        <option value="Black">Black</option>
        <option value="with Cream">Cream</option>
        <option value="with Sugar">Sugar</option>
        <option value="with Cream and Sugar">Cream+Sugar</option>
    </select><br /><br />


    <input type="submit" value="Submit" />
</form>